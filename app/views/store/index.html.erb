<% if notice %>
  <%# bootstrap_flash %>
  <p id="notice"><%= notice %></p>
<% end %>
<h1>Your Pragmatic Catalog</h1>
  <ul class="thumbnails">
  <% @books.each do |book| %>
    <li class="span4">
      <div class="thumbnail">
        <img data-src="holder.js/300x200">
        <div class="caption">
          <h3><%= book.title %></h3>
          <span class="price"><%= number_to_currency(book.price) %></span>
          <%= button_to 'Add to Cart', line_items_path(:book_id => book) ,:class=>"btn btn-primary"%>
        </div>
      </div>
    </li>
  <% end %>
</ul>