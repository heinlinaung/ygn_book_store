<% if notice %>
	<p id="notice"><%= notice %></p>
<% end %>
<h1>Your Pragmatic Catalog</h1>
  <ul class="thumbnails">
  <% @books.each do |book| %>
    <li class="span4">
      <div class="thumbnail">
        <img data-src="holder.js/300x200">
        <div class="caption">
          <h3><%= book.title %></h3>
          <span class="price"><%= number_to_currency(book.price) %></span>
          <p><a href="#" class="btn btn-primary">Action</a> <a href="#" class="btn">Action</a></p>
        </div>
      </div>
    </li>
  <% end %>
</ul>